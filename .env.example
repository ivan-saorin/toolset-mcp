# Server Configuration
HOST=0.0.0.0
PORT=8000

# MCP Configuration
MCP_SERVER_NAME=Atlas Toolset MCP Server
MCP_SERVER_VERSION=3.1.0

# Logging
LOG_LEVEL=INFO

# Filesystem Configuration
# Comma-separated list of allowed directories for filesystem operations
# If not set, defaults to ~/Documents, ~/Downloads, /tmp, /projects (if exists)
# ALLOWED_DIRECTORIES=/home/user/work,/home/user/projects,/tmp,/var/data

# Path Converter Configuration
# Windows drive letter that maps to /mcp (default: M)
# MCP_WINDOWS_DRIVE=M
# Examples:
# MCP_WINDOWS_DRIVE=D  # Maps D:\ to /mcp
# MCP_WINDOWS_DRIVE=E  # Maps E:\ to /mcp

# Optional: Authentication (implement in your tools)
# API_KEY=your_secret_api_key_here
# AUTH_ENABLED=false

# Optional: Database (if you add persistence)
# DATABASE_URL=sqlite:///data/mcp.db

# Optional: External Services
# OPENAI_API_KEY=
# ANTHROPIC_API_KEY=
